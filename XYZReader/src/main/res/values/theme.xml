<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="XyzTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/theme_primary_dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        <item name="android:textColorHighlight">@color/theme_accent</item>
    </style>

    <style name="XyzTheme.Detail" parent="XyzTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>